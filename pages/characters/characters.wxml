<!--pages/characters/characters.wxml-->

<import src="../../templates/item/item.wxml"/>

<view class="container" >
  <scroll-view class="scroll-view" 
    scroll-y
    enable-back-to-top
    lower-threshold="{{100}}"
    bindscrolltolower="onScrollToLower"
  >
    <block wx:for="{{items}}" wx:for-item="item"  wx:key="{{item.id}}">
      <template is="item" data="{{item}}"/>
    </block>
    <view class="item-loading" wx:if="{{isLoading}}">
      <text class="item-loading-text">加载中..</text>
    </view>
  </scroll-view>
</view>
