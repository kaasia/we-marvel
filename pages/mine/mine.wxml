<!--pages/mine/mine.wxml-->

<template name="image-title-btn">
  <view class="image-title-btn">
    <image class="image-title-btn-image" src="{{image}}"/>
    <text class="image-title-btn-text">{{text}}</text>
  </view>
</template>

<view class="container">
  <scroll-view class="scroll-view">
    <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

  <view class="signature">
    <text class="signature-text">Hello Marvel Universe</text>
  </view>

  <view class="collection">
    <view class="card-title">
      <text class="card-title-text">我的收藏</text>
      <text class="card-title-btn">更多>></text>
    </view>
    <view class="card-divider"/>
    <view class="card-content">
      <view class="card-content-item">
        <template is="image-title-btn" data="{{image: '/res/ic_iron_man.png', text: '漫画'}}" />
        <template is="image-title-btn" data="{{image: '/res/ic_spider_man.png', text: '英雄'}}" />
        <template is="image-title-btn" data="{{image: '/res/ic_green_man.png', text: '图鉴'}}" />
        <template is="image-title-btn" data="{{image: '/res/ic_wolverine.png', text: '壁纸'}}" />
        <template is="image-title-btn" data="{{image: '/res/ic_captain_america.png', text: '视频'}}" />
      </view>
    </view>
  </view>

  <view class="collection">
    <text>分享</text>
    <text>帮助</text>
    <text>反馈</text>
    <text>设置</text>
    <text>关于</text>
  </view>

  </scroll-view>
</view>
