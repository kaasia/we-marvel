/**app.wxss**/

/* reset */
page {
  background-color: #F8F8F8;
  height: 100%;
}

/* page */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
} 

.scroll-view {
  height: 100%;
  height: 100%;
} 


.item {
  width: 750rpx - 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 8rpx;
  margin: 16rpx 32rpx;
  border-radius: 12rpx;
  /* background-color: white; */
  background-color: aqua;
}

.item-image {
  width: 96px;
  height: 96px;
  border-radius: 12rpx;
  background-color: #eeeeee;
}

.item-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-left: 8rpx;
}

.item-info-name {
  font-size: 32rpx;
  color: black;
}

.item-info-description {
  font-size: 24rpx;
  color: gray;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.item-info-date {
  font-size: 24rpx;
  color: gray;
  text-align: right;
}